{% extends "govuk/template.njk" %}
{% from "govuk/components/header/macro.njk" import govukHeader %}
{% block head %}<link href="/public/stylesheets/application.css" rel="stylesheet">{% endblock %}
{% set pageTitleName = "Base" %}
{% block header %}
    {% if authenticated %}
        {{ govukHeader({
            "homepageUrl": "/select-app",
            "classes": "govuk-header--with-sign-out-link",
            "navigation": [
                {
                    "href": "/logout",
                    "text": "Sign out"
                }
            ]
        }) }}
    {% else %}
        {{ govukHeader ({
        homepageUrl: "/select-app"
        }) }}
    {% endif %}
{% endblock %}
{% block main %}
    <div class="govuk-width-container {{ containerClasses }}">
        <main class="govuk-main-wrapper {{ mainClasses }} govuk-!-padding-top-2"
              id="main-content"
              role="main">
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-full {{ rowClasses }}">
                    {% block content %}{% endblock %}
                </div>
            </div>
        </main>
    </div>
{% endblock %}

{% from "govuk/components/fieldset/macro.njk" import govukFieldset %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/date-input/macro.njk" import govukDateInput %}
{% extends "base.njk" %}
{% block content %}
    <h1 class="govuk-heading-l govuk-!-margin-top-3">Example GOV.UK Wallet Credential Issuer</h1>
    <form action="/build-dbs-document/?app={{ selectedApp }}" method="post">
        {% call govukFieldset({
            legend: {
            text: "Please enter the Clear Basic DBS Check document details:",
            classes: "govuk-fieldset__legend--m",
            isPageHeading: true
            } }) %}
            {{ govukDateInput({
                "id": "issuance-date",
                "namePrefix": "issuance-date",
                "fieldset": {
                    "legend": {
                        "text": "Document issuance date",
                        "isPageHeading": true,
                        "classes": "govuk-fieldset__legend--s"
                    }
                },
                "items": [
                    {
                        "classes": "govuk-input--width-2",
                        "name": "day",
                        "value": "16"
                    },
                    {
                        "classes": "govuk-input--width-2",
                        "name": "month",
                        "value": "1"
                    },
                    {
                        "classes": "govuk-input--width-3",
                        "name": "year",
                        "value": "2024"
                    }
                ]
            }) }}
            {{ govukInput({
                "label": {
                    "text": "First name",
                    "classes": "govuk-label--s"
                },
                "classes": "govuk-!-width-one-third",
                "id": "first-name",
                "name": "firstName",
                "autocomplete": "first-name",
                "spellcheck": false,
                "value": "Sarah Elizabeth"
            }) }}
            {{ govukInput({
                "label": {
                    "text": "Last name",
                    "classes": "govuk-label--s"
                },
                "classes": "govuk-!-width-one-third",
                "id": "last-name",
                "name": "lastName",
                "autocomplete": "last-name",
                "spellcheck": false,
                "value": "Edwards"
            }) }}
            {{ govukDateInput({
                "id": "birth-date",
                "namePrefix": "birth-date",
                "fieldset": {
                    "legend": {
                        "text": "Date of birth",
                        "classes": "govuk-label--s"
                    }
                },
                "items": [
                    {
                        "classes": "govuk-input--width-2",
                        "name": "day",
                        "value": "6"
                    },
                    {
                        "classes": "govuk-input--width-2",
                        "name": "month",
                        "value": "3"
                    },
                    {
                        "classes": "govuk-input--width-3",
                        "name": "year",
                        "value": "1980"
                    }
                ]
            }) }}
            {% call govukFieldset({
                legend: {
                text: "Full address",
                classes: "govuk-fieldset__legend--s",
                isPageHeading: false
                }
                }) %}
                {{ govukInput({
                                label: {
                                text: "Flat number"
                                },
                                classes: "govuk-input--width-5",
                                id: "flat-number",
                                value: data['address-flat-number-current'],
                                name: "flat-number",
                                value: "FLAT 11"
                                }) }}
                {{ govukInput({
                                label: {
                                text: "House name"
                                },
                                classes: "govuk-input--width-20",
                                id: "house-name",
                                value: data['address-house-name-current'],
                                name: "house-name",
                                value: "BLASHFORD"
                                }) }}
                {{ govukInput({
                                label: {
                                text: "Street name"
                                },
                                classes: "govuk-input--width-20",
                                id: "street",
                                value: data['address-street-current'],
                                name: "street",
                                value: "ADELAIDE ROAD"
                                }) }}
                {{ govukInput({
                                label: {
                                text: "Town or city"
                                },
                                classes: "govuk-input--width-20",
                                id: "city",
                                value: data['address-city-current'],
                                name: "city",
                                value: "LONDON"
                                }) }}
                {{ govukInput({
                    "label": {
                        "text": "Country"
                    },
                    "classes": "govuk-input--width-20",
                    "id": "country",
                    "name": "country",
                    "value": "GB"
                }) }}
                {{ govukInput({
                                label: {
                                text: "Postcode"
                                },
                                classes: "govuk-input--width-10",
                                id: "postcode",
                                value: data['address-postcode'],
                                name: "postcode",
                                autocomplete: "postal-code",
                                value: "NW3 3RX"
                                }) }}
            {% endcall %}
            {{ govukInput({
                "label": {
                    "text": "Certificate number",
                    "classes": "govuk-label--s"
                },
                "classes": "govuk-!-width-one-third",
                "id": "certificate-number",
                "name": "certificateNumber",
                "spellcheck": false,
                "value": "12345"
            }) }}
            {{ govukInput({
                "label": {
                    "text": "Application number",
                    "classes": "govuk-label--s"
                },
                "classes": "govuk-!-width-one-third",
                "id": "certificate-number",
                "name": "certificateNumber",
                "spellcheck": false,
                "value": "67890"
            }) }}
            {{ govukInput({
                "label": {
                    "text": "Certificate type",
                    "classes": "govuk-label--s"
                },
                "classes": "govuk-!-width-one-third",
                "id": "certificate-number",
                "name": "certificateNumber",
                "value": "Basic",
                "disabled": true
            }) }}
            {{ govukInput({
                "label": {
                    "text": "Outcome",
                    "classes": "govuk-label--s"
                },
                "classes": "govuk-!-width-one-third",
                "id": "certificate-number",
                "name": "certificateNumber",
                "value": "Clear",
                "disabled": true
            }) }}
            {{ govukInput({
                "label": {
                    "text": "Police records check",
                    "classes": "govuk-label--s"
                },
                "classes": "govuk-!-width-one-third",
                "id": "certificate-number",
                "name": "certificateNumber",
                "value": "Clear",
                "disabled": true
            }) }}
        {% endcall %}
        {{ govukButton({"text": "Continue", "type": "Submit", "preventDoubleClick": true}) }}
    </form>
{% endblock %}

{% from "govuk/components/fieldset/macro.njk" import govukFieldset %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/date-input/macro.njk" import govukDateInput %}
{% extends "base.njk" %}
{% block content %}
    <h1 class="govuk-heading-l govuk-!-margin-top-3">Example GOV.UK Wallet Credential Issuer</h1>
    <form action="/build-dbs-document/?app={{ selectedApp }}" method="post">
        {% call govukFieldset({
            "legend": {
            "text": "Please enter the Clear Basic DBS Check document details:",
            "classes": "govuk-fieldset__legend--m",
            "isPageHeading": true
            } }) %}
            {{ govukDateInput({
                "id": "issuance-date",
                "namePrefix": "issuance",
                "fieldset": {
                    "legend": {
                        "text": "Issuance date",
                        "isPageHeading": true,
                        "classes": "govuk-fieldset__legend--s"
                    }
                },
                "items": [
                    {
                        "classes": "govuk-input--width-2",
                        "name": "day",
                        "value": "16"
                    },
                    {
                        "classes": "govuk-input--width-2",
                        "name": "month",
                        "value": "1"
                    },
                    {
                        "classes": "govuk-input--width-3",
                        "name": "year",
                        "value": "2024"
                    }
                ]
            }) }}
            {{ govukInput({
                "label": {
                    "text": "First name",
                    "classes": "govuk-label--s"
                },
                "id": "first-name",
                "name": "firstName",
                "classes": "govuk-!-width-one-third",
                "spellcheck": false,
                "autocomplete": "first-name",
                "value": "Sarah Elizabeth"
            }) }}
            {{ govukInput({
                "label": {
                    "text": "Last name",
                    "classes": "govuk-label--s"
                },
                "id": "last-name",
                "name": "lastName",
                "classes": "govuk-!-width-one-third",
                "spellcheck": false,
                "autocomplete": "last-name",
                "value": "Edwards"
            }) }}
            {{ govukDateInput({
                "id": "birth-date",
                "namePrefix": "birth",
                "fieldset": {
                    "legend": {
                        "text": "Date of birth",
                        "classes": "govuk-label--s"
                    }
                },
                "items": [
                    {
                        "classes": "govuk-input--width-2",
                        "name": "day",
                        "value": "6"
                    },
                    {
                        "classes": "govuk-input--width-2",
                        "name": "month",
                        "value": "3"
                    },
                    {
                        "classes": "govuk-input--width-3",
                        "name": "year",
                        "value": "1980"
                    }
                ]
            }) }}
            {% call govukFieldset({
                "legend": {
                "text": "Full address",
                "classes": "govuk-fieldset__legend--s",
                "isPageHeading": false
                }
                }) %}
                {{ govukInput({
                    "label": {
                        "text": "Flat number (Sub building name)"
                    },
                    "id": "sub-building-name",
                    "name": "subBuildingName",
                    "classes": "govuk-input--width-5",
                    "spellcheck": false,
                    "autocomplete": "address-line1",
                    "value": "FLAT 11"
                }) }}
                {{ govukInput({
                    "label": {
                        "text": "Building name"
                    },
                    "id": "building-name",
                    "name": "buildingName",
                    "classes": "govuk-input--width-20",
                    "spellcheck": false,
                    "autocomplete": "address-line2",
                    "value": "BLASHFORD"
                }) }}
                {{ govukInput({
                    "label": {
                        "text": "Street name"
                    },
                    "id": "street-name",
                    "name": "streetName",
                    "classes": "govuk-input--width-20",
                    "spellcheck": false,
                    "autocomplete": "address-line3",
                    "value": "ADELAIDE ROAD"
                }) }}
                {{ govukInput({
                    "label": {
                        "text": "Town or city (Address locality)"
                    },
                    "id": "address-locality",
                    "name": "addressLocality",
                    "classes": "govuk-input--width-20",
                    "spellcheck": false,
                    "autocomplete": "address-level2",
                    "value": "LONDON"
                }) }}
                {{ govukInput({
                    "label": {
                        "text": "Country"
                    },
                    "id": "address-country",
                    "name": "addressCountry",
                    "classes": "govuk-input--width-20",
                    "spellcheck": false,
                    "autocomplete": "country-name",
                    "value": "GB"
                }) }}
                {{ govukInput({
                    "label": {
                        "text": "Postcode"
                    },
                    "id": "postal-code",
                    "name": "postalCode",
                    "classes": "govuk-input--width-10",
                    "spellcheck": false,
                    "autocomplete": "postal-code",
                    "value": "NW3 3RX"
                }) }}
            {% endcall %}
            {{ govukInput({
                "label": {
                    "text": "Certificate number",
                    "classes": "govuk-label--s"
                },
                "id": "certificate-number",
                "name": "certificateNumber",
                "classes": "govuk-!-width-one-third",
                "spellcheck": false,
                "value": "009878863"
            }) }}
            {{ govukInput({
                "label": {
                    "text": "Application number",
                    "classes": "govuk-label--s"
                },
                "id": "application-number",
                "name": "applicationNumber",
                "classes": "govuk-!-width-one-third",
                "spellcheck": false,
                "value": "E0023455534"
            }) }}
            {{ govukInput({
                "label": {
                    "text": "Certificate type",
                    "classes": "govuk-label--s"
                },
                "id": "certificate-type",
                "name": "certificateType",
                "classes": "govuk-!-width-one-third",
                "value": "Basic",
                "disabled": true
            }) }}
            {{ govukInput({
                "label": {
                    "text": "Outcome",
                    "classes": "govuk-label--s"
                },
                "id": "outcome",
                "name": "outcome",
                "classes": "govuk-!-width-one-third",
                "value": "Clear",
                "disabled": true
            }) }}
            {{ govukInput({
                "label": {
                    "text": "Police records check",
                    "classes": "govuk-label--s"
                },
                "id": "police-records-check",
                "name": "policeRecordsCheck",
                "classes": "govuk-!-width-one-third",
                "value": "Clear",
                "disabled": true
            }) }}
        {% endcall %}
        {{ govukButton({"text": "Continue", "type": "Submit", "preventDoubleClick": true}) }}
    </form>
{% endblock %}

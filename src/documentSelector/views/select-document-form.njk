{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% extends "base.njk" %}
{% set pageTitle = "Please select a document:" %}
{% block content %}
    <form action="/select-document" method="post">
        {{ govukRadios({
                "id": "select-document-choice",
                "name": "select-document-choice",
                fieldset: {
                legend: {
                text: pageTitle,
                classes: "govuk-fieldset__legend--m",
                isPageHeading: true
                }
                },
                items: documents,
                errorMessage: {
                text: "You must choose an option"
                } if error
                }) }}
        {{ govukButton({"text": "Continue", "type": "Submit", "preventDoubleClick": true}) }}
    </form>
{% endblock %}

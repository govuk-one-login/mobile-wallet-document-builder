{% from "govuk/components/fieldset/macro.njk" import govukFieldset %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/select/macro.njk" import govukSelect %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% extends "base.njk" %}
{% set pageTitle = "Please enter the NINO document details:" %}
{% block content %}
    <h1 class="govuk-heading-l govuk-!-margin-top-3">Example GOV.UK Wallet Credential Issuer</h1>
    <form action="/build-nino-document" method="post">
        {% call govukFieldset({
            legend: {
            text: "Please enter the NINO document details:",
            classes: "govuk-fieldset__legend--m",
            isPageHeading: true
            } }) %}
            {{ govukInput({
                "label": {
                    "text": "Title",
                    "classes": "govuk-label--s"
                },
                "classes": "govuk-input--width-5",
                "id": "title",
                "name": "title",
                "spellcheck": false,
                "value": "Mr"
            }) }}
            {{ govukInput({
                "label": {
                    "text": "Given name",
                    "classes": "govuk-label--s"
                },
                "classes": "govuk-input--width-20",
                "id": "given-name",
                "name": "givenName",
                "autocomplete": "given-name",
                "spellcheck": false,
                "value": "Sarah Elizabeth"
            }) }}
            {{ govukInput({
                "label": {
                    "text": "Family name",
                    "classes": "govuk-label--s"
                },
                "classes": "govuk-input--width-20",
                "id": "family-name",
                "name": "familyName",
                "autocomplete": "family-name",
                "spellcheck": false,
                "value": "Edwards"
            }) }}
            {{ govukInput({
                "label": {
                    "text": "National Insurance Number",
                    "classes": "govuk-label--s"
                },
                "classes": "govuk-input--width-10",
                "id": "nino",
                "name": "nino",
                "spellcheck": false,
                "value": "QQ123456C"
            }) }}
            {{ govukRadios({
                classes: "govuk-radios--small",
                name: "credentialTtl",
                fieldset: {
                    legend: {
                        text: "When should the credential expire?",
                        classes: "govuk-fieldset__legend--s"
                    }
                },
                items: [
                    {
                        value: "525600",
                        text: "1 Year",
                        checked: true
                    },
                    {
                        value: "1",
                        text: "1 Minute"
                    }
                ]
            }) }}
            {{ govukSelect({
                "id": "throw-error",
                "name": "throwError",
                "label": {
                    "text": "Throw an error",
                    "classes": "govuk-label--s"
                },
                "items": errorCodes
            }) }}
        {% endcall %}
        {{ govukButton({"text": "Continue", "type": "Submit", "preventDoubleClick": true}) }}
    </form>
{% endblock %}

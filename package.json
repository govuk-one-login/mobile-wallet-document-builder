{
  "name": "mobile-wallet-document-builder",
  "version": "1.0.0",
  "type": "module",
  "description": "A service for filling in the content of documents, storing them and, through integration with a wallet credential issuer, providing the links needed to load those documents into the GOV.UK Wallet",
  "repository": "https://github.com/govuk-one-login/mobile-wallet-document-builder",
  "scripts": {
    "build": "npm run typecheck && npm run build:esbuild && npm run build-sass && npm run copy-assets",
    "build:esbuild": "esbuild src/server.ts --bundle --platform=node --format=esm --outfile=dist/server.js --packages=external --sourcemap",
    "build-sass": "rm -rf dist/public/style.css && sass --no-source-map src/assets/scss/application.scss dist/public/stylesheets/application.css --style compressed",
    "copy-assets": "mkdir -p dist && copyfiles -u 1 'src/**/*.njk' dist/ && cp node_modules/govuk-frontend/dist/govuk/govuk-frontend.min.js dist/public/scripts && rm -rf dist/assets && cp -rf node_modules/govuk-frontend/dist/govuk/assets dist/assets && copyfiles -u 2 'src/resources/*' dist/resources/",
    "dev": "nodemon -e js,ts,njk --watch src --exec \"npm run build && npm run start\"",
    "typecheck": "tsc --noEmit",
    "start": "node dist/server.js",
    "test": "node_modules/.bin/jest",
    "test:cov": "jest --coverage",
    "lint": "eslint . ",
    "lint:fix": "eslint . --fix",
    "format": "prettier --ignore-path .gitignore --write \"*/**/*.{ts,json}\"",
    "localstack:up": "docker compose -f docker-compose.yml up --build -d --wait",
    "localstack:down": "docker compose -f docker-compose.yml down"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.981.0",
    "@aws-sdk/client-kms": "^3.981.0",
    "@aws-sdk/client-s3": "^3.981.0",
    "@aws-sdk/lib-dynamodb": "^3.981.0",
    "axios": "^1.13.4",
    "bs58": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "copyfiles": "2.4.1",
    "ecdsa-sig-formatter": "^1.0.11",
    "express": "^5.2.1",
    "govuk-frontend": "5.14.0",
    "jose": "^5.10.0",
    "nunjucks": "3.2.4",
    "openid-client": "^5.6.5",
    "pino": "^10.3.0",
    "pino-http": "^11.0.0",
    "qrcode": "^1.5.3"
  },
  "devDependencies": {
    "@jest-mock/express": "^3.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.0",
    "@types/nunjucks": "^3.2.6",
    "@types/qrcode": "^1.5.6",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "aws-sdk-client-mock": "^4.1.0",
    "aws-sdk-client-mock-jest": "^4.1.0",
    "dotenv": "^17.2.3",
    "esbuild": "^0.27.2",
    "eslint": "9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "jest": "^30.2.0",
    "jest-junit": "^16.0.0",
    "nodemon": "3.1.11",
    "prettier": "^3.8.1",
    "sass": "^1.97.3",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "overrides": {
    "brace-expansion": "2.0.2"
  }
}
